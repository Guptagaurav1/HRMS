@section('script')
<script>
document.getElementById("candidate-form").addEventListener("submit", function(event) {
    event.preventDefault();

    // Clear previous errors
    const errorMessages = document.querySelectorAll(".error-message");
    errorMessages.forEach((msg) => msg.innerHTML = "");

    let isValid = true;

    // Validation Functions
    function validateField(id, errorId, validationFn) {
        const field = document.getElementById(id);
        if (!validationFn(field.value)) {
            isValid = false;
            document.getElementById(errorId).innerHTML = `Please enter a valid ${field.name}.`;
        }
    }

    // Validate Fields
    validateField("f-name", "firstname-error", (value) => value.trim() !== "");
    validateField("lastname", "lastname-error", (value) => value.trim() !== "");
    validateField("dob", "dob-error", (value) => value !== "");
    validateField("job_position", "job_position-error", (value) => value.trim() !== "");
    validateField("location", "location-error", (value) => value.trim() !== "");
    validateField("email", "email-error", (value) => /\S+@\S+\.\S+/.test(value));
    validateField("phone", "phone-error", (value) => /^\d+$/.test(value));
    validateField("experience", "experience-error", (value) => value >= 0);
    validateField("resume", "resume-error", (value) => value !== "");
    
    // Custom for select elements
    if (document.querySelector("select[name='department']").value === "") {
        isValid = false;
        document.getElementById("department-error").innerHTML = "Please select a department.";
    }

    if (document.querySelector("select[name='recruitment_type']").value === "") {
        isValid = false;
        document.getElementById("recruitment_type-error").innerHTML = "Please select recruitment type.";
    }

    if (document.querySelector("select[name='education']").value === "") {
        isValid = false;
        document.getElementById("education-error").innerHTML = "Please select education.";
    }

    if (document.querySelector("select[name='skill[]']").selectedOptions.length === 0) {
        isValid = false;
        document.getElementById("skills-error").innerHTML = "Please select at least one skill.";
    }

    // Submit if valid
    if (isValid) {
        document.getElementById("candidate-form").submit();
    }
});
</script>
@endsection









